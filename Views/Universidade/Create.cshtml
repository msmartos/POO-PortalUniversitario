@model Universidade

    <form asp-controller="Universidade" asp-action="Create" method="post">

        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome"></span>
        </div>

        <div class="form-group">
            <label asp-for="Img">Imagem</label>
            <input asp-for="Img" class="form-control" />
            <span asp-validation-for="Img"></span>
        </div>

        <button class="btn btn-primary">Salvar</button>
    </form>
